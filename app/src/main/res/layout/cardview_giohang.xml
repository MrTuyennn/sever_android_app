<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_giohang"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/img_giohang"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="100dp"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tensanpham_giohang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"></TextView>
            <TextView
                android:id="@+id/ngaymua"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"></TextView>
            <TextView
                android:id="@+id/giasanpham_giohang"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"></TextView>
            <TextView
                android:id="@+id/trangthai"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"></TextView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XÃ³a"
                android:id="@+id/btn_delete"
                android:background="@drawable/custom_boder_button"></Button>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
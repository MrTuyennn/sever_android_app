<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InforSanPhamActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_sanpham"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"></ImageView>
        <TextView
            android:id="@+id/txt_loaisanpham"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"></TextView>
        <TextView
            android:id="@+id/txt_masanpham"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"></TextView>
        <TextView
            android:id="@+id/txt_tensanpham"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"></TextView>
        <TextView
            android:id="@+id/txt_giasanpham"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"></TextView>
        <TextView
            android:id="@+id/txt_motasanpham"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"></TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
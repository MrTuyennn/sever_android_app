<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Regis_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/sneakers">
            </ImageView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Ashoe Brcze5"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registered"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginLeft="5dp">
            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:outlineAmbientShadowColor="@color/black"
                android:layout_height="wrap_content"
                android:textColorHint="#7C7C7C"
                app:hintEnabled="false"
                android:background="@drawable/custom_border"
                app:hintAnimationEnabled="false"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/login"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Nhập Tên Người Dùng"
                    android:textColorHint="#706E6E"
                    android:textColor="@color/black">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:outlineAmbientShadowColor="#ffffff"
                android:layout_height="wrap_content"
                android:textColorHint="#7C7C7C"
                app:hintEnabled="false"
                android:background="@drawable/custom_border"
                app:hintAnimationEnabled="false"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/login"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Nhập Tên Người Email"
                    android:textColorHint="#706E6E"
                    android:textColor="@color/black">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:outlineAmbientShadowColor="@color/black"
                android:layout_height="wrap_content"
                android:textColorHint="#7C7C7C"
                app:hintEnabled="false"
                android:background="@drawable/custom_border"
                app:hintAnimationEnabled="false"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/phone"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Nhập SDT Người DÙng"
                    android:textColorHint="#706E6E"
                    android:textColor="@color/black">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:outlineAmbientShadowColor="@color/black"
                android:layout_height="wrap_content"
                android:textColorHint="#7C7C7C"
                app:hintEnabled="false"
                android:background="@drawable/custom_border"
                app:hintAnimationEnabled="false"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black"
                android:layout_marginHorizontal="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Nhập Mật Khẩu"
                    android:textColorHint="#706E6E"
                    android:inputType="textPassword"
                    android:textColor="@color/black">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_login"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:text="Registered"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_login"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:text="Cancle"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></Button>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
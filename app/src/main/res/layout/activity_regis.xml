<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Regis_Activity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/playcdg"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="180dp"
            android:background="@drawable/custom_backgroundlogin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/logo"
                    android:layout_margin="5dp"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registered"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp">
                </TextView>
                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/login"
                    android:drawablePadding="10dp"
                    android:layout_margin="10dp"
                    android:hint="Nhập Tên Người Dùng"
                    android:textColorHint="#706E6E"
                    android:textColor="@color/black">
                </EditText>

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/login"
                    android:drawablePadding="10dp"
                    android:layout_margin="10dp"
                    android:hint="Nhập Tên Người Email"
                    android:textColorHint="#706E6E"
                    android:textColor="@color/black">
                </EditText>
                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="10dp"
                    android:layout_margin="10dp"
                    android:hint="Nhập SDT Người DÙng"
                    android:textColorHint="#706E6E"
                    android:inputType="number"
                    android:textColor="@color/black">
                </EditText>
                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/lock"
                    android:layout_margin="10dp"
                    android:hint="Nhập Mật Khẩu"
                    android:textColorHint="#706E6E"
                    android:inputType="textPassword"
                    android:textColor="@color/black">
                </EditText>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_login"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Registered"
                    android:textColor="@color/black"
                    android:id="@+id/btn_signup"
                    android:textStyle="bold"
                    ></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_login"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Cancle"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    ></Button>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>